<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="quantity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
    </style>

    <style name="number_quantity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:textColor">@color/numer</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="number_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:textColor">@color/numer</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
    </style>

    <style name="przycisk">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="plusminus">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

    <style name="RLstyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
    </style>

    <style name="topping_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:textColor">@color/numer</item>
        <item name="android:layout_marginLeft">@dimen/topping_margin</item>
    </style>

    <style name="box_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:paddingLeft">@dimen/topping_margin</item>
    </style>

    <style name="text_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
    </style>

</resources>
